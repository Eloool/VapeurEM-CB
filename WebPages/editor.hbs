  </caption>
  <thead>
    <tr>
      <th scope="col">Nom du jeu</th>
      <th scope="col">Description</th>
      <th scope="col">Editor</th>
      <th scope="col">Genre</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each gamesFromEditor}}
    <tr>
      <th scope="row">{{title}}</th>
