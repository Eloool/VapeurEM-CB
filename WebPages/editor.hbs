<form method="post">
    <label for="editor">Donner un nom:</label>
    <input type="text" id="editor" name="editor" required/>
     <button type="submit">Ajouter un editeur</button>
</form>
<h1>Liste des Ã©diteurs</h1>

<ul>
    {{#each editor}}
        <li>
            <a href="/editor?id={{id}}">{{name}}</a>
            
            <form method="post" action="/editor/update" style="display: inline;">
                <input type="hidden" name="id" value="{{id}}" />
                <input type="text" name="name" value="{{name}}" required />
                <button type="submit">Modifier</button>
            </form>

            <form method="post" action="/editor/delete">
                <input type="hidden" name="id" value="{{id}}" />
                <button type="submit">Supprimer</button>
            </form>
        </li>
    {{/each}}
</ul>
{{#if gamesFromEditor.length}}
<table>
  <caption>
